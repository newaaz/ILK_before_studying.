<%= form_with(model: @service_category, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object%>
  <div class="row">
    <div class="col-md-9">
      
      <div class="form-group">
        <%= f.label :name %>
        <small class="text-muted">
          / Не больше 400 символов
        </small>
        <%= f.text_field :name, class:"form-control", autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :number %>
        <small class="text-muted">
          / Порядок отображения
        </small>
        <%= f.number_field :number, class:"form-control" %>
      </div>

      <div class="mb-3">
        <span style="font-size:18px"><i class="fas fa-image text-muted" data-bs-toggle="tooltip" data-bs-placement="top" title="Загрузить главную фотографию. Максимальный размер - 4 МБ"></i></span>
        <%= f.label :avatar, class: 'form-label' %> <span class="text-danger">*</span>
        <%= f.text_field :avatar, class:"form-control" %>
      </div>

      <br>

      <div class="form-group">
        <%= button_tag type: 'submit', class:"btn btn-primary btn-sm" do %>
          <span class="icon"><i class="fas fa-camera"></i></span>&#8194;Сохранить категорию
        <% end %>
        <%= link_to "Назад", :back, class: "btn btn-outline-secondary btn-sm" %>
      </div>

    </div>    
  </div>
<% end %> 
    