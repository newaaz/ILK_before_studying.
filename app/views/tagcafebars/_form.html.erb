<%= form_with(model: @tagcafebar, local: true) do |f| %>

<div class="container">
<br>
<%= render 'shared/error_messages', object: f.object%>
  <div class="row">

    <div class="col-md-5 py-4">
      
      <div class="form-group">
        <%= f.label 'Имя тега' %>
        <small class="text-muted">
          / Не больше 400 символов
        </small>
        <%= f.text_field :name, class:"form-control", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label 'Иконка' %>
        <small class="text-muted">
          / Не больше 400 символов
        </small>
        <%= f.text_field :icon, class:"form-control", autofocus: true %>
      </div> 
      <br>
      <div class="form-group">
        <%= button_tag type: 'submit', class:"btn btn-primary btn-sm" do %>
            <span class="icon"><i class="fas fa-camera"></i></span>&#8194;Сохранить
          <% end %>
        <%= link_to "Назад", :back, class: "btn btn-outline-secondary btn-sm" %>
      </div>

    </div>    
  </div>
<% end %>

</div>
