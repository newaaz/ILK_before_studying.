<% provide(:title, 'Авторизация') %>

<main class="form-signin text-center">
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

    <%= link_to image_tag('logo_large.png', class:'my-4'), root_path %>    
    <h1 class="h3 mb-3 fw-normal">Авторизация</h1>
   
    <%= f.email_field :email, class:"form-control", placeholder: "Email", autofocus: true %> 
    
    <%= f.password_field :password, class:"form-control", placeholder:"Пароль" %>     

    <div class="mb-4 mt-3">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, "Запомнить меня", class: "form-check-label" %>      
    </div>

    <%= f.submit "Войти", class:"w-75 btn btn-lg btn-primary mb-4" %>

    <small>
      <p>Новый пользователь? <%= link_to "Зарегистрироваться", signup_path%><br>
        <%= link_to "Забыли пароль", new_password_reset_path %>
      </p>      
    </small>    
  
  <% end %>
</main>