<% provide(:title, 'Список пользователей') %>

<div class="container">

<h1>Пользователи</h1><br>

<%== pagy_nav(@pagy) %>
<br>
<%= pagy_bootstrap_combo_nav_js(@pagy).html_safe %>
<br>
<%= pagy_bootstrap_nav(@pagy).html_safe %>


<table class="users table table-striped">
  <thead>
    <tr>
      <th scope="col">№</th>
      <th scope="col">id</th>
      <th scope="col">Email</th>
      <th scope="col">Редактировать</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= user.id %></td>
        <td><%= link_to user.email, user %></td>
        <td><%= link_to "Редактировать", edit_user_path(user), class: "btn btn-info btn-sm" %>&nbsp;
          <%= link_to "Удалить", user, method: :delete,
                            data: {confirm: "Вы уверены?"}, class: "btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= render @users %>

</div>


