<table class="table table-striped table-responsive">
  <thead>
    <th>№</th>
    <th>Куда</th>
    <th>Дата</th>
    <th>Кол-во участников</th>
    <th>Имя</th>
    <th>Перейти</th>
  </thead>
  <tbody>
    <% @active_orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= link_to order.active.name, order.active %></td>
        <td><%= order.wish_date.strftime('%d.%m.%y') %></td>
        <td><%= order.adults %></td>
        <td><%= order.guest_name %></td>
        <td>
          <%= link_to 'Заявка', order, class: 'btn btn-success btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>