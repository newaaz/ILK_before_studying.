<% provide(:title, 'Добавление номера') %>

<div class="container">

<h1 class='h3 text-center my-4'><%= link_to @hotel.name, @hotel %> - добавление номера:</h1>

<%= form_with(model: @room, local: true, html: { name: 'room_form' }) do |f| %>
  <%= hidden_field_tag(:hotel_id, params[:hotel_id].to_i) %>
  <%= render 'shared/error_messages', object: f.object%>
  
  <div class="row">

    <div class="col-md-9 border-end">
      
      <div class="row mb-3 gx-3">
        <div class="col-md-7">          
          <%= f.label "Название или тип номера", class: 'form-label' %> <span class="text-danger">*</span>              
          <%= f.text_field :name, class:"form-control form-control-sm", required: true %>
        </div>
        <div class="col-md-2">
          <%= f.label "Кол-во комнат", class: 'form-label' %> <span class="text-danger">*</span>        
          <%= f.text_field :rooms, class:"form-control form-control-sm" %>
        </div>

        <% if @previous_room %>
        <div class="col-md-3">
          <div class="form-label">Предыдущее описание
            <span style="font-size:14px"><sup><i class="far fa-question-circle text-muted" data-bs-toggle="tooltip" data-bs-placement="top" title="Вставить описание из предыдущего номера"></i></sup></span>
          </div> 
          <a href="javascript: insertInfo();" class="btn btn-success  shadow">Вставить</a>
          <a href="javascript: document.forms.room_form.reset();" class="btn btn-outline-warning shadow">Очистить</a>
        </div>
        <% end %>

      </div>

      <div class="row mb-3 gx-3">
        <div class="col-md-3">
          <%= f.label :guests, class: 'form-label' %> <span class="text-danger">*</span>        
          <%= f.text_field :guests, class:"form-control form-control-sm", required: true %>
        </div>
        <div class="col-md-3">        
          <div class="form-label">Площадь <span class="text-danger">*</span> (М<sup><small>2</small></sup>) </div>  
          <%= f.text_field :size, class:"form-control form-control-sm", required: true %>          
        </div>
        <div class="col-md-3">
          <%= f.label :floor, class: 'form-label' %> <span class="text-danger">*</span>           
          <%= f.number_field :floor, class:"form-control form-control-sm", required: true %>            
        </div> 
        <div class="col-md-3">
          <%= f.label :number, class: 'form-label' %> <span style="font-weight:200; font-size:14px"><sup><i class="far fa-question-circle text-muted" data-bs-toggle="tooltip" data-bs-placement="top" title="Порядковый номер в выводе списка номеров"></i></sup></span>
          <%= f.number_field :number, class: 'form-control' %>
        </div>
      </div> 

      <div class="mb-2">
        <span><i class="fas fa-info-circle text-muted"></i></span>
        <%= f.label :description, class: 'form-label' %>        
      </div>
      <%= f.rich_text_area :description, class: 'form-control mb-3', placeholder: "Чтобы прикрепить изображения просто перетащите их сюда, или нажмите кнопку со скрепкой" %>

      <%= f.label :furniture, class: 'form-label' %> <span class="text-danger">*</span>          
      <%= f.text_field :furniture, class:"form-control form-control-sm mb-3", required: true %>

      <%= f.label :bathroom, class: 'form-label' %> <span class="text-danger">*</span>        
      <%= f.text_field :bathroom, class:"form-control form-control-sm mb-3", required: true %>

      <%= f.label :in_room, class: 'form-label' %> <span class="text-danger">*</span>          
      <%= f.text_field :in_room, class:"form-control form-control-sm mb-3", required: true %>

      <span style="font-size:18px"><i class="fas fa-image text-muted" data-bs-toggle="tooltip" data-bs-placement="right" title="Загрузить главную фотографию. Максимальный размер - 4 МБ"></i></span>
      <%= f.label :addition, class: 'form-label' %> 
      <%= f.text_field :addition, class:"form-control form-control-sm mb-3" %>

      <!-- Add Price -->
      <h3 class="text-center">Добавление цен:</h3>
      <div id="prices">
        <%= f.fields_for :prices do |price| %>
          <%= render 'price_fields', f: price %>
        <% end %>     
        <div class='links'>
          <br>  
          <%= link_to_add_association 'Добавить ценовой период', f, :prices, class: "btn btn-success btn-sm" %>
        </div>
      </div><!-- end Price -->

      <br><br><br>

      <div class="d-grid gap-2 col-md-5 mx-auto mb-5">
       <%= button_tag type: 'submit', class:"btn btn-lg btn-primary" do %>
          <span class="icon"><i class="fas fa-camera"></i></span>&#8194;Добавить номер
        <% end %> 
      </div>
      

    </div>  

    <div class="col-md-3 border-start">
      <h3 class='h4 text-center'>Фото номера</h3>
      <div class="mb-3">
        <span style="font-size:18px"><i class="fas fa-image text-muted" data-bs-toggle="tooltip" data-bs-placement="top" title="Загрузить главную фотографию. Максимальный размер - 4 МБ"></i></span>
        <%= f.label :avatar, class: 'form-label' %> <span class="text-danger">*</span>
        <img src="https://via.placeholder.com/300x200" id="preview" class="img-thumbnail mb-1">        
        <%= f.file_field :avatar, accept: 'image/jpeg,image/png', class: 'form-control form-control-sm', required: true %>
      </div>
      <div class="form-group">
        <span style="font-size:18px"><i class="fas fa-images text-muted" data-bs-toggle="tooltip" data-bs-placement="top" title="Загрузить фотографии номера. Максимальный размер одной фотографии - 4 МБ, не более 15 фотографий"></i></span>
        <%= f.label :images, class: 'form-label' %>      
        <%= f.file_field :images, multiple: true, accept: 'image/jpeg,image/png', class: 'form-control' %>
      </div> 
    </div>

  </div>  

<% end %>

</div>

<script>          
  function insertInfo() {
    let previousRoom = <%= @previous_room.to_json.html_safe %>;
    let form = document.forms.room_form;
    form.elements[2].value = previousRoom.name;
    form.elements[3].value = previousRoom.rooms;
    form.elements[4].value = previousRoom.guests;
    form.elements[5].value = previousRoom.size;
    form.elements[6].value = previousRoom.floor;          
    form.elements[26].value = previousRoom.furniture;
    form.elements[27].value = previousRoom.bathroom;
    form.elements[28].value = previousRoom.in_room;
    form.elements[29].value = previousRoom.addition;
  }

  function clearForm() {
    document.forms.room_form.reset();    
  }
</script>
