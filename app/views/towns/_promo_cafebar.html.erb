<div class="col-6 col-lg-3">

  <div class="card shadow h-100 hotel-card">
    
    <!-- fotorama begin -->
    <div class="fotorama-rooms"
        data-width="100%"
        data-ratio="3/2"
        data-allowfullscreen="true"                
        data-nav="false"
        data-loop="true"
        data-keyboard="true"
        data-auto="false">      
      <%= link_to image_tag(promo_cafebar.avatar.thumb.url) %>      
      <% promo_cafebar.images.each do |image| %> 
        <%= link_to image_tag(image.thumb.url, width: "100px") %>            
      <% end %>
    </div>
    <!-- fotorama end -->    

    <%= link_to promo_cafebar do %>      
      <div class="hotel-cart__title"><%= promo_cafebar.name %></div> 
      
      <div class="card-body py-1 px-2">         

        <div class="mini-desc">
          <%= promo_cafebar.desc_json['mini_desc'] %>
        </div>   
     
      </div>

      <div class="card-footer px-2">       
      <small class="text-muted">
        <i class="icon-location-outline"></i>&nbsp;<%= promo_cafebar.address %>        
      </small>
    </div>

    <% end %>

    
    
  </div>

</div> 