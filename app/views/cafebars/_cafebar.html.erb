<div class="col-6 col-lg-4 px-0 mb-4">

  <div class="card mx-2 shadow h-100 hotel-card">
    
    <!-- fotorama begin -->
    <div class="fotorama-rooms"
        data-width="100%"
        data-ratio="3/2"
        data-allowfullscreen="true"                
        data-nav="false"
        data-loop="true"
        data-keyboard="true"
        data-auto="false">      
      <%= link_to image_tag(cafebar.avatar.thumb.url) %>      
      <% cafebar.images.each do |image| %> 
        <%= link_to image_tag(image.thumb.url, width: "100px") %>            
      <% end %>
    </div>
    <!-- fotorama end -->    

    <%= link_to cafebar do %>      
      <div class="hotel-cart__title"><%= cafebar.name %></div> 
      
      <div class="card-body py-1 px-2">         

        <div class="mini-desc">
          <%= cafebar.desc_json['mini_desc'] %>
        </div>   
     
      </div>
    <% end %>

    <div class="card-footer px-2">      

      <!-- like button -->
      <% if @cart && @array_resources_ids.include?(cafebar.id) %>
        <%= link_to line_items_path(resource_id: cafebar.id, resource_name: "Cafebar"), method: :post, remote: true, id: "heart-Cafebar-#{cafebar.id}",
                                          class: "text-danger" do %>
          <i class="icon-heart"></i>
        <% end %>
      <% else %>
        <%= link_to line_items_path(resource_id: cafebar.id, resource_name: "Cafebar"), method: :post, remote: true, id: "heart-Cafebar-#{cafebar.id}",
                                                    class: "text-secondary" do %>
          <i class="icon-heart"></i>
        <% end %>
      <% end %>
      
      <small class="text-muted">
        |&nbsp;<i class="icon-location-outline"></i>&nbsp;<%= cafebar.address %>        
      </small>

    </div>
    
  </div>

</div> 