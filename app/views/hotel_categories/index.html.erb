<% provide(:title, 'Типы жилья') %>

<%= link_to 'Новый тип жилья', new_hotel_category_path, class: 'btn btn-primary btn-sm' %>

<br>
<br>

<section id="categories">
  <table class="table">
    <thead>
      <th>№</th>
      <th>Название</th>
      <th>Иконка</th>
      <th>Действия</th>
    </thead>
    <tbody>
      <% @hotel_categories.each do |category| %>
        <tr>
          <td><%= category.number %></td>
          <td><%= category.name %></td>
          <td>Изображение категории</td>
          <td>
            <%= link_to 'Edit', edit_hotel_category_path(category), class: 'btn btn-warning btn-sm' %>
            <%= link_to "Удалить", hotel_category_path(category), method: :delete, class: 'btn btn-outline-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

