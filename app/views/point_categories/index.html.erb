<% provide(:title, 'Категории Point') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-9">

<%= link_to 'Новая Категория Point', new_point_category_path, class: 'btn btn-primary btn-sm' %>

<br>
<br>

<section id="categories">
  <table class="table">
    <thead>
      <th>№</th>
      <th>Название</th>
      <th>Иконка</th>
      <th>Действия</th>
    </thead>
    <tbody>
      <% @point_categories.each do |category| %>
        <tr>
          <td><%= category.number %></td>
          <td><%= category.name %></td>
          <td><%= image_tag category.avatar.thumb.url %></td>
          <td>
            <%= link_to 'Edit', edit_point_category_path(category), class: 'btn btn-warning btn-sm' %>
            <%= link_to "Удалить", point_category_path(category), method: :delete, class: 'btn btn-outline-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>


    </div>
  </div>
</div>
