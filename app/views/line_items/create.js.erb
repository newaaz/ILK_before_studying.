cart = document.getElementById("cart")
cart.innerHTML = "<%= j render(@cart) %>"

btnHeart = document.getElementById("heart-<%= params[:resource_name] %>-<%= params[:resource_id] %>")
btnHeart.classList.toggle("text-danger")



// if resource_controller action - show
<% if params['action_show'] == "1" %>

  addButtonHotel = document.getElementById("add-cart-hotel")

  // if add to cart
  <% if @new %>
    addButtonHotel.innerHTML =`
      <i class="icon-heart"></i> Добавлено
    `
  // if delete in cart
  <% else %>  
    addButtonHotel.innerHTML =`
      <i class="icon-heart-empty"></i> В избранное
    `
  <% end %>

<% end %>













